<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/iv_placeIcon"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_centerVertical = "true"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_placeInfo"
        android:layout_toEndOf="@+id/iv_placeIcon"
        android:layout_toRightOf="@+id/iv_placeIcon"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:layout_width="260sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtPlaceName"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPlaceAddress"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/layout_placeInfo"
        android:layout_toRightOf="@+id/layout_placeInfo"
        android:orientation="vertical"
        android:foregroundGravity="fill_horizontal"
        >

        <TextView
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/txtPlaceDistance"
            android:textSize="15sp"
            android:layout_gravity="end|center_horizontal" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_placeRating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginTop="15dp"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:layout_gravity="end" />


    </LinearLayout>

    </RelativeLayout>


